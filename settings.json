{
  // Editor
  "editor.autoClosingQuotes": "always",
  "editor.fontSize": 20,
  "editor.smoothScrolling": true,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.renderWhitespace": "none",
  "editor.stickyScroll.enabled": true,
  "editor.tabCompletion": "on",
  "editor.quickSuggestionsDelay": 1,
  "editor.lineHeight": 1.8,
  "editor.renderLineHighlight": "gutter",
  "editor.fontLigatures": true,
  "editor.fontFamily": "JetBrains Mono",
  "editor.semanticHighlighting.enabled": false,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "off"
  },

  // Workbench
  "workbench.sideBar.location": "right",
  "workbench.settings.applyToAllProfiles": ["tailwindCSS.emmetCompletions"],
  "workbench.iconTheme": "vs-nomo-dark",
  "workbench.startupEditor": "none",
  "workbench.layoutControl.enabled": false,

  // Explorer
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // Tailwind
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.colorDecorators": false,

  // Live Server
  "liveServer.settings.fullReload": true,
  "liveServer.settings.host": "localhost",
  "liveServer.settings.NoBrowser": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Window
  "window.commandCenter": false,
  "window.zoomLevel": -1,

  // Other
  "auto-rename-tag.activationOnLanguage": ["*"],
  "symbols.hidesExplorerArrows": false,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true
  },
  "workbench.editor.empty.hint": "hidden",
  "indentRainbow.indicatorStyle": "light",
  "tailwindCSS.lint.invalidApply": "ignore",
  "tailwindCSS.validate": false,
  "editor.defaultFormatter": "formulahendry.auto-close-tag",
  "workbench.colorTheme": "Edge Dark",
  "terminal.integrated.mouseWheelZoom": true,
  "editor.mouseWheelZoom": true,
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.formatOnSaveMode": "modificationsIfAvailable",
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.jsxSingleQuote": true,
  "prettier.resolveGlobalModules": true,
  "prettier.semi": false,
  "prettier.singleAttributePerLine": true,
  "prettier.singleQuote": true,
  "editor.minimap.enabled": false,
  "prettier.bracketSameLine": true,
  "prettier.proseWrap": "never",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true
}
